{
  "include": ["src"],
  "exclude": ["dist", "node_modules", "example", "tests"],
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "es2015",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true
  }
}
